  {{#if isComplete}}
    <li class="list-group-item list-group-item-action list-group-item-dark" style="text-decoration: line-through;">
      <input class="form-check-input" type="checkbox" id="task">{{content}}<span id="idspan" style="display: none;">{{id}}</span>
    </li>
  {{else}}
    <li class="list-group-item list-group-item-action list-group-item-primary">
      <input class="form-check-input" type="checkbox" id="task">{{content}}<span id="idspan" style="display: none;">{{id}}</span>
    </li>
  {{/if}}