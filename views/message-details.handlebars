{{#if loggedIn}}
    <div class="wrapper">
        <p>
            {{messages.sender_id}} : {{messages.content}}
        </p>
    </div>

        {{#if messages.responses.length}}
            {{#each messages.responses as |content|}}
                {{> response content}}
            {{/each}}
        {{/if}}
{{/if}}


<div class="message-area">
    <label for="enter-message">Enter your message:</label>
    <textarea name="message-body"></textarea>
    <button class="btn-message" type="submit">Send message</button>
</div>